<h1>Listing statements</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Depo</th>
    <th>Fb</th>
    <th>Photo</th>
    <th>Accepted</th>
    <th>Cleared</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @statements.each do |statement| %>
  <tr>
    <td><%= statement.name %></td>
    <td><%= statement.email %></td>
    <td><%= statement.depo %></td>
    <td><%= statement.fb %></td>
    <td><%= statement.photo %></td>
    <td><%= statement.accepted %></td>
    <td><%= statement.cleared %></td>
    <td><%= link_to 'Destroy', statement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

